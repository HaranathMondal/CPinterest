
<%- include('partials/header') %>
  <div class="w-full h-screen bg-centeer bg-cover bg-[url('/images/cassi-josh-lhnOvu72BM8-unsplash.jpg')] flex items-center justify-center">
    <div class="w-96 bg-white px-20 py-10 rounded-[30px]">
      <h1 class="text-2xl mb-5 text-center font-semibold text-zinc-700 tracking-tighter capitalize leading-none">Welcome to Pinterest</h1>
      <form action="/login" method="post">
        <input class="border-2 rounded-md mt-2 w-full px-3 py-2" type="text" name="username" placeholder="Username" required>
